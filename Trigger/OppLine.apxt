* Purpose 	- Create a custom field in Opportunity to display product codes
*			- When a lineItem is added, Opp should display codes
*/

trigger OppLineTrigger on OpportunityLineItem (After Insert, After Delete) {
   OppLineTriggerHandler handler = new OppLineTriggerHandler();
    handler.doActions();
}
